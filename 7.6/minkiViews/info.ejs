<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table border="1">
        <tr>
            <th>제목</th>
            <td><%=info[0].title%></td>
        </tr>
        <tr>
            <th>내용</th>
            <td><%=info[0].contents%></td>
        </tr>
        <tr>
            <th>작성자</th>
            <td><%=info[0].writer%></td>
        </tr>
    </table>
    <br>
    <button onclick="list()">목록</button>
    <button onclick="update('<%=info[0].No%>','<%=info[0].title%>', '<%=info[0].contents%>', '<%=info[0].writer%>')">수정</button>
    <button onclick="remove('<%=info[0].No%>')">삭제</button>



    <script>
        function list(){
            location.href = "/board" // GET방식의 통신법인거 잊지말기!
        }

        function update(no, title, contents, writer){
            location.href = "/board/update?_no="+no+"&_title="+title+"&_contents="+contents+"&_writer="+writer;
        }

        function remove(no){
            console.log('삭제버튼을 누릅니다');
            location.href = "/board/delete?_no="+no;
        }
    </script>
</body>
</html>

